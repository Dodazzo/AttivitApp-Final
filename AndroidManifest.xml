<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unipiazza"
    android:versionCode="1"
    android:versionName="1.0" >
<uses-sdk
 android:minSdkVersion="10"
 android:targetSdkVersion="18" />
<uses-permission android:name="android.permission.NFC" />
<uses-feature
 android:name="android.hardware.nfc"
 android:required="true" />
<uses-permission android:name="android.permission.INTERNET" />
<application
 android:allowBackup="true"
 android:icon="@drawable/ic_launcher"
 android:label="@string/app_name"
 android:theme="@style/AppTheme"
 >
 <activity
   android:name="com.example.unipiazza.MainActivity"
   android:label="@string/app_name" >
   <intent-filter>
     <action android:name="android.intent.action.MAIN" />
     <category android:name="android.intent.category.LAUNCHER" />
   </intent-filter>
   <intent-filter>
     <action android:name="android.nfc.action.NDEF_DISCOVERED" />
   	 <category android:name="android.intent.category.DEFAULT" />
   	 <data android:mimeType="text/plain" />
   </intent-filter>
   <meta-data
        android:name="android.nfc.action.TECH_DISCOVERED"
        android:resource="@xml/nfc_tech_filter" />
 </activity> 
<activity
   android:name="com.example.unipiazza.HomeActivity"
   android:label="@string/home_label" >
</activity>
<activity
   android:name="com.example.unipiazza.AddProducts"
   android:label="@string/add_activity_label" >
</activity>
<activity
   android:name="com.example.unipiazza.GiftActivity"
   android:label="@string/gift_label" >
</activity>
<activity
   android:name="com.example.unipiazza.testID"
   android:label="@string/test_label" >
</activity>
<activity
   android:name="com.example.unipiazza.searchID"
   android:label="@string/search_label" >
</activity>
</application>
</manifest>
